<div class="col-lg-6">
	<form action="/categoria/update/<%= categoria.id %>" method="POST">
	    <h2>Editar Categoria</h2>
	    <label>Nome:</label>
	    <div class="form-group">
	    	<input type="text" name="nome" id="nome" placeholder="Nome" value="<%= categoria.nome %>" />
	    </div>
	    <label>Descrição</label>
	    <div class="form-group">
	    	<textarea name="descricao" id="descricao" placeholder="Breve descrição da categoria"><%= categoria.descricao %></textarea>
	    </div>
	    <div class="form-group">
	    	<input type="submit" name="save" class="btn btn-default pull-right" value="Salvar" />
	    </div>
	</form>
</div>