<div class="col-lg-6">
	<form action="/categoria/create" method="POST">
	    <h2>Nova Categoria </h2>
	    <label>Nome:</label>
	    <div class="form-group">
	    	<input type="text" name="nome" id="nome" class="form-control" placeholder="Nome" value="" />
	    </div>
	    <label>Descrição</label>
	    <div class="form-group">
	    	<textarea name="descricao" id="descricao" value="" class="form-control" placeholder="Breve descrição da categoria"></textarea>
	    </div>
	    <div class="form-group">
	    	<input type="submit" name="save" class="btn btn-default pull-right" value="Salvar" />
	    </div>
	</form>
</div>