<div class="col-lg-6">
    <%- req.flash('erro') %>
    <%- req.flash('sucesso') %>
    <form action="/usuario/updatesenha" method="POST">
        <input type="hidden" name="id" value="<%= req.user.id %>">
        <label>Senha Atual:</label>
        <div class="form-group">
            <input type="password" name="senhaAtual" id="senhaAtual" class="form-control" placeholder="Senha atual" value="" />
        </div>
        <label>Nova senha:</label>
        <div class="form-group">
            <input type="password" name="novaSenha" id="novaSenha" class="form-control" placeholder="Nova senha" value="" />
        </div>
        <div class="form-group">
            <input type="submit" name="save" class="btn btn-default pull-right" value="Salvar" />
        </div>
    </form>
</div>