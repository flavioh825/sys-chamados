<div class="col-lg-9">
<h3>Departamentos</h3>
    <table border="1" class="table">
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Andar</th>
            <th>Sala</th>
            <th>Unidade</th>
            <th></th>
        </tr>
        <% _.each(departamento, function(dep){ %>
        <tr data-id="<%= dep.id %>" data-model="departamento">
            <td><%= dep.id %></td>
            <td><%= dep.nome %></td>
            <td><%= dep.andar %></td>
            <td><%= (dep.numero_sala != '')? dep.numero_sala: '-' %></td>
            <td><%= dep.unidade %></td>
            <td>
                <div class="btn-group">
                    <a href="/departamento/show/<%= dep.id %>" class="btn btn-success" title="Visualizar dados do departamento"><i class="fa fa-eye"></i></a>
                    <a href="/departamento/edit/<%= dep.id %>" class="btn btn-info" title="Visualizar dados do departamento"><i class="fa fa-edit"></i></a>
                    <a href="/departamento/destroy/<%= dep.id %>" class="btn btn-danger" title="Visualizar dados do departamento"><i class="fa fa-trash"></i></a>
                </div>
            </td>
        </tr>
        <% }) %>
    </table>
</div>