<div class="col-lg-6">
    <form action="/departamento/update/<%= departamento.id %>" method="POST">
        <h2>Editar departamento</h2>
        <label>Nome:</label>
        <div class="form-group">
            <input type="text" name="nome" id="nome" placeholder="Nome" class="form-control" value="<%= departamento.nome %>" />
        </div>
        <label>Andar:</label>
        <div class="form-group">
            <select name="andar" id='andar' class="form-control">
            	<option value="">Selecione</option>
            	<option value="03" <%= (departamento.andar == '03')? 'selected="selected"': ''%>>03</option>
            	<option value="14" <%= (departamento.andar == '14')? 'selected="selected"': ''%>>14</option>
            	<option value="15" <%= (departamento.andar == '15')? 'selected="selected"': ''%>>15</option>
            </select>
        </div>
        <label>Numero da Sala:</label>
        <div class="form-group">
            <input type="text" name="numero_sala" id="numero_sala" class="form-control" placeholder="Numero da sala" value="<%= departamento.numero_sala %>" />
        </div>
        <label>Unidade:</label>
        <div class="form-group">
            <select name="unidade" id='unidade' class="form-control">
            	<option value="ICN Rio" <%= (departamento.unidade == 'ICN Rio')? 'selected="selected"': ''%>>ICN Rio</option>
            	<option value="ICN CTO" <%= (departamento.unidade == 'ICN CTO')? 'selected="selected"': ''%>>ICN CTO</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" name="save" class="btn btn-default pull-right" value="Salvar" />
        </div>
    </form>
</div>