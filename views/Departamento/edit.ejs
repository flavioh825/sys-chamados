<form action="/departamento/update/<%= departamento.id %>" method="POST">
    <h2>Editar departamento</h2>
    <label>Nome:</label>
    <input type="text" name="nome" id="nome" placeholder="Nome" value="<%= departamento.nome %>" />
    <label>Andar:</label>
    <select name="andar" id='andar'>
    	<option value="">Selecione</option>
    	<option value="03" <%= (departamento.andar == '03')? 'selected="selected"': ''%>>03</option>
    	<option value="14" <%= (departamento.andar == '14')? 'selected="selected"': ''%>>14</option>
    	<option value="15" <%= (departamento.andar == '15')? 'selected="selected"': ''%>>15</option>
    </select>
    <label>Numero da Sala:</label>
    <input type="text" name="numero_sala" id="numero_sala" placeholder="Numero da sala" value="<%= departamento.numero_sala %>" />
    <label>Unidade:</label>
    <select name="unidade" id='unidade'>
    	<option value="ICN Rio" <%= (departamento.unidade == 'ICN Rio')? 'selected="selected"': ''%>>ICN Rio</option>
    	<option value="ICN CTO" <%= (departamento.unidade == 'ICN CTO')? 'selected="selected"': ''%>>ICN CTO</option>
    </select>
    <input type="submit" name="save" value="Salvar" />
</form>