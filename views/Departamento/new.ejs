<form action="/departamento/create" method="POST">
    <h2>Novo departamento</h2>
    <label>Nome:</label>
    <input type="text" name="nome" id="nome" placeholder="Nome" value="" />
    <label>Andar:</label>
    <select name="andar" id='andar'>
    	<option value="">Selecione</option>
    	<option value="03">03</option>
    	<option value="14">14</option>
    	<option value="15">15</option>
    </select>
    <label>Numero da Sala:</label>
    <input type="text" name="numero_sala" id="numero_sala" placeholder="Numero da sala" value="" />
    <label>Unidade:</label>
    <select name="unidade" id='unidade'>
    	<option value="ICN Rio">ICN Rio</option>
    	<option value="ICN CTO">ICN CTO</option>
    </select>
    <input type="submit" name="save" value="Salvar" />
</form>